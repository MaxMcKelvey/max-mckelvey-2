---
const post_css = "flex flex-col text-center rounded-lg h-72 shadow-proj hover:shadow-proj-hover snap-center sm:mx-10 mx-4 mt-2 mb-6 w-60 place-self-center";

export interface Props {
	post: {
        href: string;
        title: string;
        subtitle: string;
        description: string;
    };
}

const { post } = Astro.props;
---

<a href={post.href}>
    <div class={post_css + " p-4"}>
        <h3 class="text-2xl">{post.title}</h3>
        <h4 class="text-lg text-zinc-400">{post.subtitle}</h4>
        <div class="p-1 my-[auto]"></div>
        <div class="">{post.description}</div>
        <div class="p-1 my-[auto]"></div>
    </div>
</a>