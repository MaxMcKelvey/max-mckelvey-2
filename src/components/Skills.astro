import SkillSection from './SkillSection.astro';

const get_skills = (category: string) => sortedSkills.filter(skill => skill.categories.includes(category));
---

<div id="skills" class="flex flex-col w-full justify-center p-20 bg-slate-600 text-zinc-300 md:snap-center">
    <h2 class="self-center text-3xl pb-2">A Full Stack Engineer?</h2>
    <p class="self-center w-96">I not only work on sofware engineering projects but also build circuits, design digital systems, model 3d parts and assemblies, and manufacture parts</p>
    <div class="pt-10"/>
    <div class="flex flex-col md:flex-row">
        <SkillSection title="Electrical Engineering">{get_skills('ee').map(skill => <li>{skill.skill}</li>)}</SkillSection>
        <SkillSection title="Software Engineering">
            <div class="flex justify-evenly">
                <div>
                    <h3>Languages</h3>  
                    {get_skills('cs_lang').map(skill => <li>{skill.skill}</li>)}
                </div>
                <div>
                    <h3>Frameworks</h3>
                    {get_skills('cs_frame').map(skill => <li>{skill.skill}</li>)}
                </div>
            </div>
            <div class="text-center">{get_skills('cs').map(skill => <li>{skill.skill}</li>)}</div>
        </SkillSection>
        <SkillSection title="Mechanical Engineering">{get_skills('me').map(skill => <li>{skill.skill}</li>)}</SkillSection>
    </div>
